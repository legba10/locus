{
  "name": "locus-new-backend",
  "version": "0.1.0",
  "private": true,
  "description": "LOCUS New backend (NestJS + Prisma + AI Orchestrator)",
  "scripts": {
    "dev": "nest start --watch",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/main.js",
    "start:prod": "node dist/main.js",
    "lint": "eslint .",
    "prisma:generate": "prisma generate",
    "prisma:fix-windows": "powershell -ExecutionPolicy Bypass -File fix-prisma-windows.ps1",
    "prisma:migrate": "prisma migrate dev",
    "prisma:push": "prisma db push",
    "prisma:studio": "prisma studio",
    "db:seed": "ts-node -T prisma/seed.ts",
    "db:test": "ts-node -T scripts/test-db-connection.ts",
    "db:reset": "prisma db push --force-reset && npm run db:seed",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:reset": "docker-compose down -v && docker-compose up -d",
    "deploy:check": "node scripts/deploy-check.js",
    "deploy:local": "APP_ENV=LOCAL node scripts/deploy-check.js",
    "deploy:staging": "APP_ENV=STAGING node scripts/deploy-check.js",
    "deploy:prod": "APP_ENV=PROD node scripts/deploy-check.js"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.15",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.4.15",
    "@nestjs/event-emitter": "^2.1.0",
    "@nestjs/platform-express": "^10.4.15",
    "@nestjs/swagger": "^8.1.1",
    "@prisma/client": "^5.22.0",
    "@supabase/supabase-js": "^2.93.2",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.4.7",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.9",
    "@nestjs/schematics": "^10.2.3",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.8",
    "@types/node": "^20.10.6",
    "@types/swagger-ui-express": "^4.1.8",
    "eslint": "^8.56.0",
    "prisma": "^5.22.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
